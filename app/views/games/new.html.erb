<div class="container">
  <h1>Games#new</h1>

  <h2><%= session[:score] %></h2>

  <ul>
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>

  <p>What's the longest word you can find ?</p>
  <form action="score" methode="POST">
    <div class="form-group d-flex">
      <input type="text" name="trial" class="form-control" id="typing-bar">
      <input type="submit" value="Play!" class="btn btn-light" id="play-btn">
      <%= hidden_field_tag :grid, @letters %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </div>
  </form>
</div>
